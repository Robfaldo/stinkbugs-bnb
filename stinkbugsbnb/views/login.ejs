<html>
<header>
  <%- include ./partials/_header.ejs %>
</header>

<body style="background-color: #e6ffe6;">
  <h1 style="text-align: center;">Log in to Stinkbugs B'n'B</h1>
  <div style="background-color: #85e085; margin: auto; width: 50%; border: 3px solid green; padding: 50px;">
  <form class="form-horizontal" action="/login" method="post" id="login-form">

  <div class="form-group">
    <label>Email Address:</label>
    <input type="email" class="form-control" required="true" name="email_address">
  </div>

  <div class="form-group">
    <label>Password:</label>
    <input type="text" class="form-control" name="password">
  </div>


  <%= errorMessage %>

  <div>
    <input class="btn btn-primary" type="submit" id="Submit" name="Submit" value="Log In"><br>
  </div>

</form>
</div>

<footer>
  <%- include ./partials/_header.ejs %>
</footer>

</body>
