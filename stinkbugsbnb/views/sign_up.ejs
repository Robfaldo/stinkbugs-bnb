<html>
<header>
  <%- include ./partials/_header.ejs %>
</header>
<head>
  <link href='https://fonts.googleapis.com/css?family=Amita' rel='stylesheet'>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body style="font-family: 'Amita'; background-color: #e6f9ff;">
  <div style="width: 100%;">
  <%- include ./partials/_navbar.ejs %>
</div>
<div style="padding: 50px; color: blue">
</div>
  <div style="background-color: #e6f9ff; margin: auto; width: 50%; border: 3px solid blue; padding: 50px;">
  <form class="form-horizontal" action="/signup_form" method="post" id="sign_up_form">

    <div class="form-group">
      <label>Name:</label>
      <input type="text" required class="form-control" name="user_name">
    </div>

  <div class="form-group">
    <label>Email Address:</label>
    <input type="email" class="form-control" name="email_address">
  </div>

  <div class="form-group">
    <label>Password:</label>
    <input type="password" class="form-control" name="password">
  </div>

  <div class="form-group">
    <label>Password Confirmation:</label>
    <input type="password" class="form-control" name="password_confirmation">
  </div>

  <div>
    <input class="btn btn-primary" type="submit" id="Submit" name="Submit" value="Sign Me Up"><br>
  </div>

</form>
</div>

<footer>
  <%- include ./partials/_header.ejs %>
</footer>

</body>
